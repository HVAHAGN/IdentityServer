@model LoginViewModel
<h1 style="text-align:center">Login</h1>
<form style="text-align:center" asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>Username</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <button type="submit">Sign In</button>
    </div>

</form>
<div style="text-align:center">
    <button>
        <a style="text-decoration:none" asp-controller="Auth" asp-action="Register"
           asp-route-returnUrl=(@(if(@Model.ReturnUrl == null) 
           {
               Model.ReturnUrl = "/Auth/Register";
           })>Register</a>
    </button>
</div>