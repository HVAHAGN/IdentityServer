@model RegisterViewModel
<h1 style="text-align:center">Register</h1>
<form asp-controller="Auth" asp-action="Register" method="post" style="text-align:center">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>Username</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div></div>
    <div>
        <button type="submit">Sign Up</button>
    </div>
</form>
<div style="text-align:center">
    <button>
        <a style="text-decoration:none" asp-controller="Auth" asp-action="Login"
           asp-route-returnUrl=@Model.ReturnUrl>Back to Login page</a>
    </button>
</div>
